{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "brickd": ["packages/brick-design/src/index"],
      "brickd/*": ["packages/brick-design/src/*"],
      "brickd-core": ["packages/core/src/index"],
      "brickd-core/*": ["packages/core/src/*"],
      "bricks-web": ["packages/bricks-web/src/index"],
      "bricks-web/*": ["packages/bricks-web/src/*"]
    }
  },
  "exclude": ["**/node_modules/**", "**/lib/**","node_modules"]
}
